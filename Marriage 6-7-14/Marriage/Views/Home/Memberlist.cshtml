
@{
    ViewBag.Title = "Memberlist";
    Layout = "~/Views/Home/UserMaster.cshtml";
}
@model IEnumerable<Marriage.Models.Members>


<script type="text/javascript" >
     $(function () {
        $('#dialog').dialog({
            type: "Post",
            autoOpen: false,
            width: 400,
            height:350,
            resizable: false,
            title: 'Message',
            modal: true,
            open: function(event, ui) {
            $(this).load("@Url.Action("SendMessage","Home")");
            }
        });
         $("#opener").click(function () {
             $("#dialog").dialog("open");
         });
     });
     function sendMessage(Id) {
     alert(Id);
         $("#reciverid").val(Id);
         $("#dialog").dialog("open");
     }
  </script>
<h2> Index</h2>
 
<div id="dialog" title="Basic dialog" >Please wait</div>


<table>
    <tr>
       
        <th>
            firstname
        </th>
        <th>
            middlename
        </th>
        <th>
            lastname
        </th>
       
        <th>
            email
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
          @item.id  @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MiddleName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
       
        <td>
           <input type="button" value="Send Messaage" onclick="sendMessage(@item.Id)" />
           <input type="button" value="Interested People" onclick="sendMessage(@item.Id)" />
           <input type="button" value="Request for Mobile no." onclick="sendMessage(@item.Id)" />
            
        </td>
    </tr>
}

</table>

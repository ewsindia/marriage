@model IEnumerable<Marriage.Models.members>

@{
    ViewBag.Title = "Memberlist";
    Layout = "~/Views/Home/UserMaster.cshtml";
}

<script type="text/javascript" >
     $(function () {
        $('#dialog').dialog({
            autoOpen: false,
            width: 400,
            height:500,
            resizable: false,
            title: 'Message',
            modal: true,
            open: function(event, ui) {
              var Id = $(this).val();
                $(this).load("@Url.Action("SendMessage", "Home")");
            },
            buttons: {
                "Close": function () {
                    $(this).dialog("close");
                }
            }
        });
         $("#opener").click(function () {
             $("#dialog").dialog("open");
         });
     });
  </script>
<h2> Index</h2>
 
